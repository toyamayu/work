
<%= render 'books/kyoutu', book:@book ,user: @user %>

<div class="col-xs-9">
<h2>Book detail</h2>


            <table class="table">
                <tbody>
                        <tr>
                            <td><%= link_to (@book.user)  do%><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, class: "pull-left profile-thumb", fallback: "no_image.jpg"%><br/><br/><%= @user.name %><%end%></td>       
                            <td><%=  link_to @book.title, book_path(@book) %></td>
                            <td><%= @book.body %></td>

                            <% if @book.user == current_user %>
                            <td><%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success " %></td>
                            <td><%= link_to "Destroy", book_path, data: {confirm:"本当に消しますか？"}, method: :delete, class:"btn-sm btn-danger destroy_book_12947" %></td>
                            <% end %>
                            

                    

                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>