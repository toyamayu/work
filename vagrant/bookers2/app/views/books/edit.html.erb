        
<div class="body">
    <div class="container">
        <%= render "devise/shared/error_messages", resource: @book, class:"notice" %>


        <div class="row">
            <div class="col-md-6 col-md-offset-3">

            <h1>Editing Book</h1>

            <%= form_for @book do |f| %>

            <div class="field row">
                <label for="book_title">Title</label><br/>
                <%= f.text_field :title, class:"col-xs-12 book_title" %><br/>
            </div>

            <div class="field row">
                <label for="book_opinion">Opinion</label><br/>
                <%= f.text_area :body, class:"col-xs-12 book_body" %><br/>
            </div>

            <div class="actions row">
                <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
            </div>

            <%= link_to "Show", book_path %> |
            <%= link_to "Back", books_path %>


            <% end %>
            </div>
        </div>
    </div>
</div>
