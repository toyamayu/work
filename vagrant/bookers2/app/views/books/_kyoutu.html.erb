<div class="body">
    <div class="container clearfix">
        <% if flash[:notice] %>
            <div class="flash">
                <%= flash[:notice] %>
            </div>
        <% end %>
        <% if flash[:danger] %>
            <div class="flash">
                <%= flash[:danger] %>
            </div>
        <% end %>



        <div class="col-xs-3">
            <h2>User info</h2>

            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
            <table class="table">

                <tr>
                    <th>name</th>
                    <th><%= user.name %><br/></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= user.introduction %></th>
                </tr>

            </table>
            <div class="row">
                <% if user == current_user %> 
                <%= link_to "", edit_user_path(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench"  %>
                <% else %>
                <%= link_to "", books_path, class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
                <% end %>
            </div>


            <h2>New book</h2>

            <%= form_for(book) do |f| %>

            <div class="field row">
                <label for="book_title">Title</label><br/>
                <%= f.text_field :title, class:"form-control", class:"col-xs-12 book_title" %><br/>
            </div>

            <div class="field row">
            <label for="book_opinion">Opinion</label><br/>
            <%= f.text_area :body, class:"form-control", class:"col-xs-12 book_body" %><br/>
            </div>

            <div class="action row">
            <%= f.submit "Create Book", class:"btn btn-primary col-xs-12"%>
            </div>
            <% end %>
        </div>
