
    <%= render "devise/shared/error_messages", resource: @book %>
    <%= render 'books/kyoutu', book:@book ,user: @user %>
    <div class="col-xs-9">
        <h2>Books</h2>

        <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </tr>
          </thead>
            <% @books.each do |book| %>
            <tr>
                <td><%=link_to (user_path(book.user_id)) do%><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, class: "pull-left profile-thumb", fallback: "no_image.jpg" %></td>       
                <td><%= link_to book.title, (book_path(book.id)) %></td>
                <td><%= book.body %></td>
            </tr>
          
            <% end %>
            <%end%>
        </table>
      </div>
      <footer>
            <div class="container">
                <div class="row">
                    <div class="col-xs-3 col-xs-offset-9">
                        <p>CopyRight Infratop.inc</p>
                    </div>
                </div>
            </div>
        </footer>
  </div>
</div>