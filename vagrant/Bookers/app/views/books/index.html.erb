
<p id="notice"><%= flash[:notice] %></p>
<h1>Books</h1>

<table>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destory", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></td>
    </tr>
    <% end %>
</table>


<h2>New Book</h2>

<%= form_for(@book,url:'/books') do |f| %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<label>Title</label><br/>
<%= f.text_field :title %><br/>

<label>Body</label><br/>
<%= f.text_area :body %><br/>

<br/>
<%= f.submit 'Create Book' %>


<% end %>







