<h1>Books</h1>


<table >
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
    <td>
        <span><%= link_to book.title, book_path(book) %></span>
    </td>
    <td>
        <span><%= link_to book.body, book_path(book) %></span>
       
    </td>
    <td><%= link_to 'Show', book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destory", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></td>
    </tr>
    <% end %>
</table>


<h1>New Book</h1>

<%= form_for(@book,url:'/books') do |f| %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br/>
<%= f.submit 'Create Book' %>


<% end %>







